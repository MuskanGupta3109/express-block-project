<%- include('header.ejs') %>
<style>
  .img{
      animation: updown 2s ease-in-out infinite alternate-reverse both;
  }

  @keyframes updown{
      0%{
          transform:translate(10px);
      }
      100%{
          transform:translate(-10px);
      }
      
  }

 
</style>


  <section class="cmspage mtb-40" style="background: linear-gradient(9deg,#a40808 0%,#b029298f 85%);">
    <div class="container">
      <div class="page-desc">
        <div class="row justify-content-center">
          <div class="col-md-7">
            <h1>Contact</h1>
            <form method="post" action="/contactinsert" enctype="multipart/form-data">
              <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Name" required>
              </div>
              <div class="form-group">
                <input type="text" name="email" class="form-control" placeholder="E-Mail" required>
              </div>
              <div class="form-group">
                <input type="text" name="phone" class="form-control" placeholder="Phone" required>
              </div>
              <div class="form-group">
                <textarea name="message" rows="5" class="form-control" placeholder="Message" required></textarea>
              </div>
              <div class="form-group">
                <button class="btn btn-success">Send Message</button>
              </div>
            </form>
          </div>
          <div class="col-md-5">
            <br>
            <br>
            <br>
            

            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQdMJHNdC9cwLPFBwiTjBQk69C3VjbTuZMppQ&usqp=CAU" class="w-100 img">

          </div>
        </div>
      </div>
    </div>
</section>

